<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Box Buddy</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="icon" href="/images/icon-black.png">
    <link rel="stylesheet" href="/css/newPost.css">

    <style>
        :root {
          --color-custom: rgb(238, 62, 56);
          --color-custom2: rgb(238, 62, 56, 0.9);
        }
        .brand-red {
          background-color: var(--color-custom);
          /* Additional styles for the custom element */
        }
        .brand-red2 {
          background-color: var(--color-custom2);
          /* Additional styles for the custom element */
        }
        .custom-red {
          border-color: var(--color-custom2);
          /* Additional styles for the custom element */
        }
    </style>

</head>
<body>

    <div class="flex flex-col h-screen bg-white overflow-auto"> 

        <!-- Navbar -->
        <%- include('./partials/navbar') %>


        <!-- Main content -->
        <div class="flex flex-row">

            <div class="flex flex-col">
                
                <form action="/friends" method="POST" class="flex flex-col justify-evenly items-start text-lg mt-4 px-1">
          
                    <div class="mb-1 flex flex-col">
                      <label for="user" class="form-label">Add Friend:</label>
                      <input type="text" class="form-control border" id="user" name="user">
                      <input name="friendID" type="hidden" value="NULL" class="idHolder"></input>
                      <ol style="display:none" id="list">
                        <% users.forEach(user => { %>

                          <li class="users" style="display: none" id="<%= user.id %>">
                            <img id="profilePic" class="w-10 h-10 rounded-full object-cover object-center" src="<%= user.imageURL ? user.imageURL : '/images/person-icon.png' %>">
                            <div class="fullName" id="<%= user.id %>"><%= user.firstName %> <%= user.lastName %> </div>
                        </li>
                         
                        <% }) %>

                      </ol>
                      <button id="submitButton" class="bg-black  text-white font-bold py-2 px-4 rounded mx-auto mt-2" type="submit">Submit</button>
                    </div>
                </form>

            <!-- Post -->
            <div id="post.id" class="my-1 pl-2 w-screen">

                <div class="mb-2 mt-4 text-xl font-semibold">Friends</div>

                <div class="flex flex-row items-center pt-2 pb-2">
                    
                    <ol id="list">
                        <% friends.forEach(friend => { %>

                          <li class="friend mb-2" id="<%= friend.id %>">
                            <img id="profilePic" class="w-10 h-10 rounded-full object-cover object-center" src="<%= friend.imageURL ? friend.imageURL : '/images/person-icon.png' %>">
                            <div><%= friend.firstName %> <%= friend.lastName %></div>
                            <div><%= friend.email %></div>
                        </li>
                         
                        <% }) %>

                      </ol>
                    
                </div>
            </div>
            <!-- End Post -->

            </div>


        </div>


        <!-- Footer -->
        <%- include('./partials/footer') %>


    </div>

    <script src="/js/friendsClient.js"></script>

</body>
</html>