<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Box Buddy</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="icon" href="/images/icon-black.png">

    <style>
        :root {
          --color-custom: rgb(238, 62, 56);
          --color-custom2: rgb(238, 62, 56, 0.9);
        }
        .brand-red {
          background-color: var(--color-custom);
          /* Additional styles for the custom element */
        }
        .brand-red2 {
          background-color: var(--color-custom2);
          /* Additional styles for the custom element */
        }
        .custom-red {
          border-color: var(--color-custom2);
          /* Additional styles for the custom element */
        }
    </style>

</head>
<body>

    <div class="flex flex-col h-screen bg-white overflow-auto"> 

        <!-- Navbar -->
        <%- include('./partials/navbar') %>


        <!-- Main content -->
        <div class="flex flex-row">

            <div class="flex flex-col">
                
                <form action="/newpost" method="POST" class="flex flex-col justify-evenly items-start text-lg mt-4 px-1">

                    <div class="mb-3 text-xl font-semibold">Create a New Post:</div>
          
                    <div class="mb-1 flex flex-col">
                      <label for="exercise" class="form-label">Exercise:</label>
                      <input type="text" class="form-control border" id="exercise" name="exercise">
                    </div>
                    <div class="mb-1 flex flex-col">
                      <label for="sets" class="form-label">Sets:</label>
                      <input type="text" class="form-control border" id="sets" name="sets">
                    </div>
                    <div class="mb-1 flex flex-col">
                      <label for="reps" class="form-label">Reps:</label>
                      <input type="text" class="form-control border" id="reps" name="reps">
                    </div>
                    <div class="mb-1 flex flex-col">
                      <label for="weight" class="form-label">Weight:</label>
                      <input type="text" class="form-control border" id="weight" name="weight">
                    </div>
                    <div class="mb-1 flex flex-col">
                      <label class="form-label">Time:</label>
                      <input type="text" placeholder="minutes" class="form-control border" id="minutes" name="minutes">
                      <input type="text" placeholder="seconds" class="form-control border" id="seconds" name="seconds">
                    </div>
                    <label for="distance" class="form-label">Distance:</label>
                    <div class="mb-1 flex flex-row">
                      <input type="text" class="form-control border" id="distance" name="distance">
                      <select class="form-select w-15 border ml-2" name="measurement">
                        <option selected>Type</option>
                          <option value="">Miles</option>
                          <option value="">Meters</option>
                      </select>
                    </div>
                    <div class="mb-1 flex flex-col">
                      <label for="calories" class="form-label">Calories:</label>
                      <input type="text" class="form-control border" id="calories" name="calories">
                    </div>
                    <div class="mb-3">
                      <label for="notes" class="form-label">Notes:</label>
                      <textarea type="text" class="form-control border h-20 w-96" id="notes" name="notes"></textarea>
                    </div>                     
                    <!-- <div class="mb-3">
                      <label for="publishDate" class="form-label">Post Time:</label>
                      <input type="datetime-local" class="form-control border" id="publishDate" name="publishDate">
                    </div>                         -->
                    <button type="submit" class="bg-black  text-white font-bold py-2 px-4 rounded mx-auto">Create New Post</button>
                </form>

            <!-- Post -->
            <div id="post.id" class="my-1 pl-2 w-screen">
                <div class="flex flex-row items-center pt-2 pb-2">
                    
                </div>
                <p class="pb-2 text-lg"></p>
                <div class="flex flex-col pb-3">
                    
                </div>
            </div>
            <!-- End Post -->

            </div>


        </div>


        <!-- Footer -->
        <%- include('./partials/footer') %>


    </div>

</body>
</html>